<Window
	x:Class="Task1.View.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Task1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:properties="clr-namespace:Task1.Properties"
	Title="Прогноз погоды"
	Width="793.697"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="12*" />
			<RowDefinition Height="88*" />
		</Grid.RowDefinitions>
		<Grid Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="60*" />
				<ColumnDefinition Width="40*" />
			</Grid.ColumnDefinitions>
			<ComboBox
				Grid.Row="0"
				Grid.Column="0"
				Margin="20,12,10,12"
				DisplayMemberPath="CityName"
				ItemsSource="{Binding Path=Citys}"
				SelectedItem="{Binding Path=SelectedCity}"
				SelectedValuePath="ID" />
			<Button
				x:Name="buttonGetInfoWeather"
				Grid.Row="0"
				Grid.Column="1"
				Width="165"
				Height="23"
				Margin="10"
				Command="{Binding GetInfoWeather}"
				CommandParameter="{Binding SelectedCity}"
				Content="{x:Static properties:Resources.Get}" />
		</Grid>
		<TextBox
			x:Name="WeatherInfoOutput"
			Grid.Row="1"
			Grid.Column="0"
			Margin="20"
			IsReadOnly="True"
			Text="{Binding SelectedCity.CityUrl}"
			TextWrapping="Wrap"
			VerticalScrollBarVisibility="Auto" />
	</Grid>
</Window>