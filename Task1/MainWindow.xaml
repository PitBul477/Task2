<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        xmlns:properties="clr-namespace:Task1.Properties"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="793.697">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25*"></RowDefinition>
			<RowDefinition Height="200*"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="159*"></ColumnDefinition>
				<ColumnDefinition Width="103*"></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Grid.Row="0" x:Name="CityNameInput" Margin="20,12,10,12"/>
			<Button Grid.Column="1" Grid.Row="0" x:Name="buttonGetInfoWeather" Content="{x:Static properties:Resources.Get}" Margin="10" Width="165" Height="23" Click="Button_Click"/>
		</Grid>
		<TextBox Grid.Column="0" Grid.Row="1" x:Name="WeatherInfoOutput" Margin ="20" Text=""/>
	</Grid>
</Window>